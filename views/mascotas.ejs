<%- include("template/headers") %>

<div class="container text-center">
  
    <form class="form-control bg-dark w-50 m-auto my-5 ">
        <h1 class="text-center  my-2" style="color: rgb(255, 150, 22);"><b><u>CRUD Mongo</u></b></h1>
    </form>
    
    <table class="table table-dark table-hover w-75 m-auto">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>

            <% if (arrayMascotas.length > 0) { %>
                <% arrayMascotas.forEach(mascotas => { %>
                    <tr>
                        <th scope="row"><%= mascotas.id %></th>
                        <td><%= mascotas.nombre %></td>
                        <td><%= mascotas.descripcion %></td>
                        <td> <a href="mascotas/<%= mascotas.id %>", class="btn btn-warning bt-sm">Editar</a> </td>
                    </tr>
                <% }) %>
            <% } %>           
        </tbody>
    </table>   <br>
    <a class="btn btn-success btn-block my-4 " href="/mascotas/crear">
        Crear mascota
    </a>
</div>

