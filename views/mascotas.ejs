<%- include("template/headers") %>

<div class="container text-center">
  
    <h1 class="text-center my-5"><b><u>CRUD Mongo</u></b></h1>
    
    <table class="table table-dark table-hover w-75 m-auto">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>

            <% if (arrayMascotas.length > 0) { %>
                <% arrayMascotas.forEach(mascotas => { %>
                    <tr>
                        <th scope="row"><%= mascotas.id %></th>
                        <td><%= mascotas.nombre %></td>
                        <td><%= mascotas.descripcion %></td>
                        <td>Accion</td>
                    </tr>
                <% }) %>
            <% } %>           
        </tbody>
    </table>   <br>
    <a class="btn btn-success btn-block my-4 " href="/mascotas/crear" >
        Crear mascota
    </a>
</div>

<form class="form-control bg-dark w-25 m-auto">
    <% if (arrayMascotas.length > 0) { %>
        <% arrayMascotas.forEach(mascotas => { %>       
            <div class="input-group">
                <span class="input-group-text w-25 my-2">Semana</span> 
                <output type="text" class="form-control my-2"><%= mascotas.id %></output>
            </div>
            <div class="input-group">
                <span class="input-group-text w-25 my-2">Mes</span> 
                <output type="text" class="form-control my-2"><%= mascotas.nombre %></output>
            </div>
            <div class="input-group">
                <span class="input-group-text w-25 my-2">AÃ±o</span> 
                <output type="text" class="form-control my-2"><%= mascotas.descripcion %></output>
            </div>
        <% }) %>
    <% } %>    
</form>

